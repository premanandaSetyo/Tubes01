<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddMovieFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <!--Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/am_title"
                android:textColor="@color/white"
                android:textSize="@dimen/label_20"/>

            <EditText
                android:id="@+id/add_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                app:backgroundTint="@color/white"/>

            <!--Synopsis-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/am_syn"
                android:textColor="@color/white"
                android:textSize="@dimen/label_20"/>

            <EditText
                android:id="@+id/add_movie_synopsis"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:gravity="top"
                android:textColor="@color/white"
                app:backgroundTint="@color/white"/>

            <!--Poster-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/am_poster"
                android:textColor="@color/white"
                android:textSize="@dimen/label_20"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"/>
            <Button
                android:id="@+id/am_btn_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/am_btn_upload"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/am_btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/am_btn_add"
                android:layout_margin="30dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

